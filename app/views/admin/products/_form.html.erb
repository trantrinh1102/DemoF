<%= simple_form_for [:admin, @product] do |f| %>
  <%= f.input :name, class: "form-control" %>
  <%= f.input :category_id, collection: @categories, class: "form-control" %>
  <%= f.input :description, class: "form-control" %>
  <%= f.input :price, class: "form-control" %>
  <%= f.input :image, class: "form-control" %>
  <%= f.button :submit, t(".save"),
    class: "btn btn-primary col-md-1 col-md-offset-5" %>
<% end %>
